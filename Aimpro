local SilentAim = loadstring(game:HttpGet(
    "https://raw.githubusercontent.com/thanhgaylolgbt-maker/Aim/refs/heads/thanhgaylolgbt-maker-patch-1/Aim.lua.txt"
))()

-- ===== BẬT MINI TOGGLE =====
SilentAimModule:SetMiniTogglePlayerSilentAim(true)
SilentAimModule:SetMiniToggleNpcSilentAim(true)

-- ===== CẤU HÌNH CƠ BẢN =====
SilentAimModule:SetHighlight(false)
SilentAimModule:SetDistanceLimit(800)
SilentAimModule:SetLowHPPriority(true)

-- ===== AUTO =====
SilentAimModule:SetAutoKen(false)
SilentAimModule:SetZSkillorM1(true)

SilentAimModule:SetAimSmoothness(0.3)
SilentAimModule:SetVelocitySampleCount(4)
SilentAimModule:EnableProjectileLead(false)
